{
    "name": "nonetallt/laravel-resource-boiler",
    "description": "Create boilerplate code for laravel resources.",
    "type": "library",
    "license": "MIT",
    "require-dev": {
        "orchestra/testbench": "^8.18",
        "pestphp/pest": "^2.30",
        "pestphp/pest-plugin-laravel": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Nonetallt\\LaravelResourceBoiler\\": "src/",
            "Test\\": "test/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nonetallt\\LaravelResourceBoiler\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "test": [
            "@php vendor/bin/pest --test-directory=test"
        ]
    }
}
